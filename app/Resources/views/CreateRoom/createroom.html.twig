{% extends '::base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Create Room{% endblock %}

{% block body %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-login'}}) }}
<h2 class="form-login-heading">Create Room</h2>

<div class="login-wrap">

    {{ form_widget(form.Name, {'attr': { 'class': 'form-control', 'placeholder': 'Name' } }) }}
    <br>
    <label class="col-sm-2 col-sm-2 control-label">Room Picture</label>
    <div class="col-sm-10">
        {{ form_widget(userForm.imageURL) }}
    </div>
</div>
    {{ form_widget(form.plainPassword.first, {'attr': { 'class': 'form-control', 'placeholder': 'Pasword' } }) }}
    <br>
    {{ form_widget(form.plainPassword.second, {'attr': { 'class': 'form-control', 'placeholder': 'Confirm Pasword' } }) }}

    <br>

    <button class="btn btn-theme btn-block" id="_submit" name="_submit" type="submit"><i class="fa fa-lock"></i> Create Room</button>
    <hr>

</div>

{{ form_end(form) }}

{% endblock %}