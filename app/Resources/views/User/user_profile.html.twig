{% extends '::base.html.twig' %}

{% block title %}My Profile{% endblock %}


{% block body %}

    <div class="row">
        <div class="col-xs-12">

            <div class="border-head">
                <h3>My Profile</h3>
            </div>



            <!-- START Info Card -->
            <div class="col-md-3">
                <div class="darkblue-panel">
                    <div class="darkblue-header">
                        <div class="user mt">
                            {% if user.imageURL %}
                                <img src="{{ user.imageURL }}" class="img-circle" width="80">
                            {% else %}
                                <img src="{{ asset('img/placeholders/default.jpeg') }}" class="img-circle" width="80">
                            {% endif %}
                            <h4 class="mm_orange">{{ user.firstName }} {{ user.lastName }}</h4>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel">
                    <div class="col-xs-12">

                        <h4>About Me</h4>

                        {% if user.description %}
                            <p>{{ user.description }}</p>
                        {% else %}
                            <p class="text-center mb">No User Description</p>
                        {% endif %}



                        <table class="table table-hover table-borderless">
                            <tbody>
                            <tr>
                                <td><i class="fa fa-user mm_orange"></i></td>
                                <td>{{ user.username }}</td>
                            </tr>

                            <tr>
                                <td><i class="fa fa-envelope mm_orange"></i></td>
                                <td> {{ user.email }}</td>
                            </tr>

                            </tbody>
                        </table>

                    </div>

                    <a href="{{ path('profile_settings') }}">
                        <button class="btn btn-block btn-orange">Edit Profile</button>
                    </a>


                    <div class="clearfix"></div>

                </div>


            </div>
            <!-- END Info Card -->

            <div class="col-md-9">
                <div class="showback">
                    <h4>My Reviews</h4>
                    <br/>

                    <div class="task-content">
                        <ul id="sortable" class="task-list ui-sortable">

                            <li class="list-info">
                                <div class="task-title">
                                    <h4><span class="task-title-sp">Review User Name</span></h4>
                                </div>
                                <p>Testing review content view</p>
                            </li>



                        </ul>
                    </div>



                    <div class="clearfix"></div>
                </div>
            </div>


        </div>
    </div>



{% endblock %}